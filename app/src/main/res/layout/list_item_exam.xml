<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background">

    <TextView
        android:id="@+id/exam_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Titolo" />

    <TextView
        android:id="@+id/exam_professor_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/exam_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/exam_title_text_view"
        tools:text="Professore" />
</androidx.constraintlayout.widget.ConstraintLayout>