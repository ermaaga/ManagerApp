<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_label_exam_description"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_desc_study_case"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_desc_study_case"
        app:layout_constraintTop_toBottomOf="@+id/textView_name_study_case" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_name_study_case"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/textview_border"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="Lorem Ipsum" />

    <TextView
        android:id="@+id/textView_desc_study_case"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/textview_border"
        android:maxLines="10"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_name_study_case"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_name_study_case"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris eget erat ac sapien pellentesque egestas. Cras iaculis interdum placerat. Quisque maximus lorem tortor, at dapibus mi cursus quis. Duis auctor, augue luctus maximus sodales, dui magna luctus ipsum, ut accumsan nisi libero non urna. Sed auctor odio non commodo gravida. Ut scelerisque dapibus erat a scelerisque. Donec vitae mollis nibh. Nam non nisi efficitur, consectetur sem eget, ornare justo. Donec accumsan nulla in augue tempor, auctor finibus enim ultricies. Integer elementum cursus fermentum. Vivamus sed consequat quam. Vestibulum in rhoncus augue. Proin lorem urna, ultricies eu mattis sed, varius vestibulum sapien." />

    <Button
        android:id="@+id/button_create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="createGroup"
        android:text="@string/text_button_go_create_group"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="@+id/file_type_image_view"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/file_type_image_view" />

    <ImageView
        android:id="@+id/file_type_image_view"
        android:layout_width="137dp"
        android:layout_height="82dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/description_case_study_info"
        app:layout_constraintEnd_toEndOf="@+id/textView_desc_study_case"
        app:layout_constraintStart_toStartOf="@+id/textView_desc_study_case"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ic_pdf" />

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/text_lable_click"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_desc_study_case"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_desc_study_case"
        app:layout_constraintTop_toBottomOf="@+id/textView_desc_study_case" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/text_label_exam_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_name_study_case"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_name_study_case"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>